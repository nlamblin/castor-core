#!/usr/bin/env node
/* vim: set ft=javascript: */
"use strict";
var kuler = require('kuler')

require('../starter.js')(function(config, start) {
    start(function(err, server) {
        if (err instanceof Error) {
          console.error(kuler("Unable to init the server.", "red"), Error.toString());
          process.exit(3);
          return;
        }
        var pack = config.get('package');
        if (pack) {
          console.info(kuler('App    :', 'olive'), kuler(pack.name + ' ' + pack.version, 'limegreen'));
        }
        console.info(kuler("Server is listening on " + config.get('baseURL') + "/", "green"));
    });
})

